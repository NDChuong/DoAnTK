<div class="container">
    <div class="wrapper">
        <div class="row">
            <div class="col-md-12">
                <h3 class="page-header"><i class="fa fa-book"></i> Thông tin sách</h3>
            </div>
        </div>        
        <div class="col-md-4">
            <img src="{{book.link}}" class="avatar-resize" alt="">
            {{#if isAvailable}}
            <p class="label available-status">Available</p>
            {{else}}
            <p class="label none-available-status">Non Available</p>
            {{/if}}
        </div>
        
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">Tên sách: </div>
                <div class="col-md-9">{{book.ten_sach}}</div>
            </div>
            <div class="row">
                <div class="col-md-3">Tác giả: </div>
                <div class="col-md-9">{{book.tac_gia}}</div>
            </div>
            <div class="row">
                <div class="col-md-3">ISBN: </div>
                <div class="col-md-9">{{book.ma_ISBN}}</div>
            </div>
            <div class="row">
                <div class="col-md-3">Thuộc tủ sách: </div>
                <div class="col-md-9">
                    <a href="/bookshelf-detail.html?id_user={{user.id_user}}"><b>{{user.ten_user}}</b></a>
                </div>
            </div>            
        </div>
        <div class="">
            <button type="button" class="btn light-form-button" data-toggle="modal" data-target="#lendbook">Mượn sách</button>
        </div>
        <div class="modal fade" id="lendbook" role="dialog">
                <div class="modal-dialog modal-md">
                    <!-- Modal content no 1-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title text-center form-title">Gửi lời mời mượn sách</h4>
                        </div>
                        <div class="modal-body padtrbl">
                            <div class="login-box-body">
                                <div class="form-group">
                                    <form method="POST" role="form" onsubmit="return valiDate();">
                                        <div class="row">
                                            <div class="col-xs-6">Chọn ngày mượn: </div>
                                            <div class="col-xs-6">
                                                <input type="date" class="form-control resize-form" id="BorrowDate" name="borrowDate">
                                            </div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-xs-6">Chọn ngày trả: </div>
                                            <div class="col-xs-6">
                                                <input type="date" class="form-control resize-form" id="ReturnDate" name="returnDate">
                                            </div>
                                        </div><br>
                                        <div class="col-xs-12">
                                            <button type="submit" class="btn btn-green btn-block btn-lend">Mượn</button>
                                        </div>
                                        </form>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
    </div>
</div>