<div class="container">
    <div class="wrapper">
        <div class="row">
            <div class="col-md-12">
                <h3 class="page-header"><i class="fa fa-book"></i> Thông tin sách</h3>
            </div>
        </div>        
        <div class="col-md-4">
            <img src="{{bookimage}}" class="avatar-resize" alt="">
            {{#if BookStatus.isAvailable}}
            <p class="label available-status">Available</p>
            {{else}}
            <p class="label none-available-status">None Available</p>
            {{/if}}
        </div>
        {{#each book}}
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">Tên sách: </div>
                <div class="col-md-9">{{ten_sach}}</div>
            </div>
            <div class="row">
                <div class="col-md-3">Tác giả: </div>
                <div class="col-md-9">{{tac_gia}}</div>
            </div>
            <div class="row">
                <div class="col-md-3">ISBN: </div>
                <div class="col-md-9">{{ma_ISBN}}</div>
            </div>
            <div class="row">
                <div class="col-md-3">Thuộc tủ sách: </div>
                <div class="col-md-9">
                    <a href="/bookshelf/bookshelf?id_user={{id_user}}"><b>{{ten_user}}</b></a>
                </div>
            </div>            
        </div>
        {{/each}}
    </div>
</div>