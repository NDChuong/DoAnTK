<div class="container">
	<div class="wrapper">
		<div class="row">
			<div class="col-md-12">
				<h3 class="page-header"><i class="fa fa-user-md"></i> Thông tin cá nhân</h3>
			</div>
		</div>
	</div>
	{{#each user}}
	<div class="col-md-4">
		<img src="{{{avatarimage}}}" class="avatar-resize" alt="">
        <h5 class="text-center">{{ten_user}}</h5>
	</div>
	<div class="col-md-8">
		<div class="row">
			<div class="col-md-3">Họ và tên: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="text" name="ten_user" placeholder="{{ten_user}}" class="form-control">
				</form>
			</div>
		</div><br>
		<div class="row">
			<div class="col-md-3">Ngày sinh: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="date" name="dob" placeholder="{{ngay_sinh}}" class="form-control resize-form">
				</form>
			</div>
		</div><br>
		<div class="row">
			<div class="col-md-3">Giới tính: </div>
			<div class="col-md-9">
				<input type="radio" name="gender">
				<span>Nam</span>
				<input type="radio" name="gender">
				<span>Nữ</span>				
			</div>
		</div><br>
		<div class="row">
			<div class="col-md-3">Số điện thoại: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="text" name="so_dien_thoai" placeholder="{{so_dien_thoai}}" class="form-control resize-form">
				</form>
			</div>
		</div><br>
		<div class="row">
			<div class="col-md-3">Email: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="text" name="email" placeholder="{{email}}" class="form-control">
				</form>
			</div>
		</div><br>
		<div class="col-xs-12">
			<button type="button" class="btn btn-green btn-block btn-lend">Cập nhật</button>
		</div>
	</div>	
	{{/each}}
</div>