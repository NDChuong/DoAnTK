<div class="container">
	<div class="wrapper">
		<div class="row">
			<div class="col-md-12">
				<h3 class="page-header"><i class="fa fa-user-md"></i> Thông tin cá nhân</h3>
			</div>
		</div>
	</div>
	{{!-- {{#each user}} --}}
	<div class="col-md-4">
		<img src="{{{user.avatar}}}" class="avatar-resize" alt="">
        <h5 class="text-center">{{user.ten_user}}</h5>
	</div>
	<div class="col-md-8">
		<div class="row">
			<div class="col-md-3">Họ và tên: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="text" name="ten_user" placeholder="{{user.ten_user}}" class="form-control">
				</form>
			</div>
		</div><br>
		<div class="row">
			<div class="col-md-3">Ngày sinh: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="date" name="dob" placeholder="{{user.ngay_sinh}}" class="form-control resize-form">
				</form>
			</div>
		</div><br>
		<div class="row">
			<div class="col-md-3">Giới tính: </div>
			{{#if _gioi_tinh}}
			<div class="col-md-9">
				<input type="radio" name="gender" checked>
				<span>Nam</span>
				<input type="radio" name="gender">
				<span>Nữ</span>				
			</div>
			{{else}}
			<div class="col-md-9">
				<input type="radio" name="gender">
				<span>Nam</span>
				<input type="radio" name="gender"checked>
				<span>Nữ</span>				
			</div>
			{{/if}}
		</div><br>
		<div class="row">
			<div class="col-md-3">Số điện thoại: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="text" name="so_dien_thoai" placeholder="{{user.so_dien_thoai}}" class="form-control resize-form">
				</form>
			</div>
		</div><br>
		<div class="row">
			<div class="col-md-3">Email: </div>
			<div class="col-md-9">
				<form action="#">
					<input type="text" name="email" placeholder="{{user.email}}" class="form-control">
				</form>
			</div>
		</div><br>
		<div class="col-xs-12">
			<button type="button" class="btn btn-green btn-block btn-lend">Cập nhật</button>
		</div>
	</div>	
	{{!-- {{/each}} --}}
</div>